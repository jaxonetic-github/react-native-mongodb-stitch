{
  "name": "Tamari",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest __tests__/*.js --detectOpenHandles",
    "lint": "eslint *.js **/*.js --fix",
    "jesttest": "node ./node_modules/jest/bin/jest.js --watchAll"
  },
  "dependencies": {
    "@babel/plugin-proposal-async-generator-functions": "^7.2.0",
    "@babel/polyfill": "^7.4.3",
    "@babel/runtime": "^7.3.1",
    "@react-native-community/netinfo": "^2.0.3",
    "@redux-saga/testing-utils": "^1.0.1",
    "jsdoc": "^3.5.5",
    "react": "16.6.3",
    "react-native": "^0.59.4",
    "react-native-fit-image": "^1.5.4",
    "react-native-geocoding": "^0.3.0",
    "react-native-gesture-handler": "^1.1.0",
    "react-native-google-signin": "^1.2.1",
    "react-native-ionicons": "^4.5.6",
    "react-native-maps": "^0.23.0",
    "react-navigation": "^3.3.2",
    "smartystreets-javascript-sdk": "^1.2.2"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.3.1",
    "braces": "^2.3.2",
    "detox": "^11.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "24.3.1",
    "metro-react-native-babel-preset": "0.53.0",
    "mocha": "^6.0.2",
    "mongodb-stitch-react-native-sdk": "^4.3.1",
    "native-base": "^2.12.0",
    "react-native-calendars": "^1.22.0",
    "react-native-image-picker": "^0.28.0",
    "react-native-webview": "^5.6.2",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "16.6.3",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.0.1",
    "redux-saga-test-plan": "^4.0.0-beta.2"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/Tamari.app",
        "build": "xcodebuild -workspace  ios/Tamari.xcworkspace -scheme Tamari -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 9"
      }
    },
    "test-runner": "jest"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|native-base-shoutem-theme|react-navigation|react-native-gesture-handler)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true
  }
}
